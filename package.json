{
  "name": "nextjs-electron-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main/index.js",
  "description": "Boilerplate with Electron, Next.js and TypeScript",
  "homepage": "https://fabioo.dev.br",
  "author": {
    "name": "FÃ¡bio de Carvalho",
    "email": "callmefabioo@gmail.com"
  },
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "yarn build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "yarn build-renderer && yarn build-electron",
    "pack-app": "yarn build && electron-builder --dir",
    "dist": "yarn clean && yarn build && electron-builder -wl",
    "type-check": "tsc"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "next": "latest",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  },
  "build": {
    "appId": "com.nextjs-electron-boilerplate",
    "productName": "Boilerplate with Electron, Next.js and TypeScript",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${name}-v${version}-${arch}-${os}-installer.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${name}-v${version}-${arch}-${os}-installer.${ext}"
    },
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}